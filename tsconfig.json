{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "paths": {
      "@pericles/*": [
        "packages/*/src/index.ts"
      ]
    }
  },
  "include": [
    "apps/*/src/**/*.ts",
    "apps/*/src/**/*.tsx",
    "apps/*/src/**/*.js",
    "apps/*/src/**/*.jsx",
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "packages/*/src/**/*.js",
    "packages/*/src/**/*.jsx"
  ],
  "references": [
    {
      "path": "./packages/util/src"
    },
    {
      "path": "./packages/store/src"
    },
    {
      "path": "./packages/constants/src"
    }
  ],
  "exclude": [
    "node_modules",
    "apps/*/node_modules",
    "packages/*/node_modules"
  ]
}